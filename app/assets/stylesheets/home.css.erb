#home{
	border: 1px solid green;
	margin: auto;
	margin-top: 2%;  
    padding: 10px;
    width: 50%;
}
#home-img {
	margin: 2%;
}
#home-text {
	margin: 2%;
	text-align: justify;
	width: 95%;
}
#home-btn {
	float: right;
	margin: 2%;
}
.footer {
	left: 47%;
	margin-left: -250px;  /* very important for the image to be centered */
	opacity: 0.7;
	position: absolute;
	padding-top: 80px;
	text-align: center;
}
.footer-logo-container {
	border-bottom: 1px solid grey;
}
.footer-logo {
	position: relative;
	bottom: 20px;
	width: 550px;
	height: 80px;
}
#footer-help {
	padding-top: 15px;
	font-size: 13px;
}
#footer-colaborators {
	left: 47%;
	padding-top: 30px;
	position: absolute;
	font-size: 13px;
}
.footer > p > a {
	color: blue;
}
#footer-info {
	font-size: 11px;
}
